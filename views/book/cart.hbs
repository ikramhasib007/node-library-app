{{> head}}
<div class="row">
    <div class="col">
        <div class="cart">
            <form action="/book/checkout" method="POST">
                <div class="card text-center bg-light">
                    <div class="card-body" style="width: 100%; min-width: 20rem;">
                        <h5 class="card-title">Book Title: {{book.title}}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Author: {{book.author}}</h6>
                        <p class="card-text">Fees: {{book.fee}} + {{book.delivery_charges}} = {{book.total_fees}} BDT.</p>
                        <button type="submit" class="btn btn-outline-success">Checkout</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

{{> footer}}